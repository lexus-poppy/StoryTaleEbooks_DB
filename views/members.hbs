<h1>Members</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each members.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

<tbody>
    {{#each members}}
    <tr>
        <td>{{this.memberID}}</td>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        <td>
            <button class="btn-delete" onclick="deleteMember({{this.memberID}})">Delete</button>
        </td>
    </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Member</h2>
<form action="/members" method="POST" id="add-member-form">
    <label for='firstName'>First Name: </label>
    <input type='text' name='firstName' id='firstName' required />

    <label for='lastName'>Last Name: </label>
    <input type='text' name='lastName' id='lastName' required />

    <label for='phoneNumber'>Phone Number: </label>
    <input type='text' name='phoneNumber' id='phoneNumber' required />

    <label for='email'>Email: </label>
    <input type='text' name='email' id='email' required />

    <input type='submit' value="Add Member"/>
</form>

{{! UPDATE form }}
<h2>Update a Member</h2>
<form class='cuForm' id='update-member-form'>
    <label for='update_member_id'>Member to Update: </label>
    <select name='update_member_id' id='update_member_id' required onchange="const o=this.options[this.selectedIndex]; showUpdateMember(o.value, o.getAttribute('data-fname'), o.getAttribute('data-lname'), o.getAttribute('data-phone'), o.getAttribute('data-email'))">
        <option value='' disabled selected>Select a Member</option>
        {{#each members}}
        <option value='{{this.memberID}}' data-fname='{{this.firstName}}' data-lname='{{this.lastName}}' data-phone='{{this.phoneNumber}}' data-email='{{this.email}}'>
            {{this.memberID}} - {{this.firstName}} {{this.lastName}}
        </option>
        {{/each}}
    </select>

    <label for='update-fname'>First Name: </label>
    <input type='text' name='firstName' id='update-fname' autocomplete='given-name' />

    <label for='update-lname'>Last Name: </label>
    <input type='text' name='lastName' id='update-lname' autocomplete='family-name' />

    <label for='update-phone'>Phone Number: </label>
    <input type='text' name='phoneNumber' id='update-phone' autocomplete='tel' />

    <label for='update-email'>Email: </label>
    <input type='email' name='email' id='update-email' autocomplete='email' />

    <input type='hidden' id='update-id' name='memberID' />
    <input type='submit' value="Update Member"/>
</form>

<script src="/js/update_member.js"></script>
<script src="/js/delete_member.js"></script>

